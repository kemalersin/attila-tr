<div class="extra-pagination">
	{{pagination}}
</div>

{{#foreach posts}}

<article class="{{post_class}}">
	<div class="inner">
		<header class="post-header">
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
			<span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{tags prefix=" | " separator=", "}} | <a href="{{url}}#disqus_thread">Yorumlar</a></span>
			<div class="clear"></div>
		</header>

		<section class="post-excerpt">
			<p>{{excerpt}}&hellip;</p>
			<p><a href="{{url}}#disqus_thread">Yorumlar</a></p>
		</section>
	</div>
</article>

{{/foreach}}

{{pagination}}
